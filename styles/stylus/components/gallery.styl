.gallery
  pt($unit*2)
  pb($unit*4)

.gallery__list
  row()
  li
    col(12)
    mb($unit)
    +afterTablet()
      col(6)
    +afterDesktop()
      col(4)
  a
    block()
    pos()
    &:hover
      .gallery__info
        opacity: 1
        bottom: 0

.gallery__img
  pos()
  block()
  h(0)
  pb(100%)
  overflow: hidden
  img
    pos(absolute)
    w(100%)
    h(auto)

.gallery__info
  pos(absolute)
  w()
  b(-30px)
  l(0)
  p(16px)
  bgc(rgba($white, .9))
  opacity: 0
  transition: all 0.2s ease-in-out
  h4
    mb(8px)
    fs(16px)
    lh(24px)
    fw(normal)
  p
    fs(11px)
    lh(16px)

