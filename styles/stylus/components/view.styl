#view__header
  ta(center)

.view__summary,
.view__utility,
.ni__summary
  col(12)

.view__utility
  mb($unit * 4)

.view__title,
.ni__title
  mt(64px)
  ff($batang)
  fs(40px)
  lh(1.4)
  mb(12px)
  letter-spacing: -0.02em

.view__author,
.ni__date
  fs(1rem)
  fw(400)

.btn--vote,
.btn--like
  @extend .btn--subscribe
  white-space nowrap
  width auto !important
  line-height 1

.work,
.ni__content
  col(12)

.ni__content
  mt($unit * 4)
.work__img
  w()
  h(auto)
  m(0 auto)
  img
    w()
    h(auto)
  +afterTablet()
    w(80%)
  +afterDesktop()
    w(60%)

.work__desc,
.ni__desc
  w(80%)
  m(0 auto)
  mb($unit*3)
  p
    mb(1rem)

.ni__desc
  +tilTablet()
    w(100%)

.comments
  w(100%)
  m(0 auto)
  mt($unit * 3)
  +afterDesktop()
    w(60%)
.comments__heading
  fw(400)
  fs(18px)
  lh()
  mb($unit * 2)

.comments__list
  mb($unit * 5)
  li
    mb($unit * 1.5)
  .comment
    flex()
    flex-wrap: wrap
    h5
      mr(8px)
      fs(1rem)
      lh(1.5)
    p
      fs(1rem)
      lh(1.5)
    .comment__date
      color: $sub
      w()
      mt(4px)

.signup #header
  ta(center)
  .header__contents
    w()
  .btn__submit
    @extend .btn--vote

.signup
  #main
    .row
      w(auto)
      jc(center)
      pt($unit * 4)
  .signup__form
    col(12)
    +afterTablet()
      col(8)
    +afterDesktop()
      col(6)
    +afterWide()
      col(4)
    input
      w()
      mb(6px)
  .btn__login
    @extend .btn__register
    w()
    m()
    pr(0)
    pl(0)
    r()
