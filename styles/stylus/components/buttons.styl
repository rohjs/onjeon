


.btn__delete
  fs(13px)
  lh(50px)
  color: rgba($red, .6)
  transition: all 0.2s ease-in-out
  &:hover
    color: $red

.btn__out
  @extend .btn__delete
  pos(absolute)
  t(50%)
  r(20px)
  transform: translateY(-50%)
  transition: all 0.2s ease-in-out
  &:hover
    color: $red

.permission__control
  a
    inblock()
    w(35px)
    h(35px)
    bgs(contain)
    border-radius: 100px
    transition: all 0.2s ease-in-out
    +afterTablet()
      w(36px)
      h(36px)
    &:hover,
    &:focus,
    &:active
      box-shadow: 0 1px 2px rgba($body, .3)
    &.btn__permit_y
      mr(8px)
      bg(url(../../assets/icon-approve@2x.png))
    &.btn__permit_n
      bg(url(../../assets/icon-reject@2x.png))


.btn__vote
  pos()
  inblock()
  w(80px)
  h(38px)
  fs(13px)
  lh(38px)
  t(-3px)
  ta(center)
  border-radius: 100px
  border: 1px solid $body
  transition: all 0.2s ease-in-out
  +afterMobile()
    w(100px)
    h(40px)
    fs(15px)
    lh(40px)
  &.disabled
    opacity: 0.45
    cursor: not-allowed
    bgc($grey-01)
    &:hover,
    &:focus,
    &:active
      bgc($grey-01)
      color: $body
    &::after
      content: '* 지금은 투표기간이 아닙니다'
      pos(absolute)
      color: $sub
      w(375px)
      h(12px)
      fs(11px)
      lh(1)
      b(-20px)
      l(0px)
      ta(left)
      +afterMobile()
        l(10px)
        fs(12px)

  &.on
    bgc($grey-05)
    color: $white
    &:hover,
    &:focus,
    &:active
      opacity: 0.7
  &:hover,
  &:focus,
  &:active
    bgc($grey-05)
    color: $white

.btn__join
  @extend .btn__vote
  w(140px)
  top: 0 !important
  &.on
    @extend .btn__vote.on

.btn__reply
  fs(13px)
  color: $blue
  transition: all 0.2s ease-in-out
  &:hover,
  &:focus,
  &:active
    color: $grey-05

// --
.btn__register
  p(16px)
  lh()
  pos()
  r(10px)
  ml(20px)
  color: $blue
  border: 1px solid $blue
  transition: all 0.2s ease-in-out
  &:hover,
  &:focus
    bgc(rgba($blue, .95))
    color: $white
  @media screen and (max-width: 399px)
    w()
    mt($unit)
    ta(center)

.btn__submit
  @extend .btn__register
  mt(40px)
  ml(0)
  pos(absolute)
  b(-80px)
  l(50%)
  transform: translateX(-50%)